<UserControl x:Class="Wpf.Ui.ToastNotifications.Notification.ToastNotification"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wpf.Ui.ToastNotifications.Notification"
             mc:Ignorable="d" 
             HorizontalAlignment="Center" VerticalAlignment="Top">
    
    <Border BorderBrush="White" BorderThickness="1" Background="Black" Opacity="0.8" CornerRadius="5" Height="22">
        <Grid>
            <TextBlock Text="{Binding Toast, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}" 
                       Foreground="White" Padding="20" FontSize="14" VerticalAlignment="Center" Margin="5,0,5,0"/>
        </Grid>
    </Border>
</UserControl>
